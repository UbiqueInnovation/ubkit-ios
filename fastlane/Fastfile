import_from_git(url: "git@bitbucket.org:ubique-innovation/fastlane-ios.git", branch: "master")

# Xcode Version to use for builds
ENV["XCVERSION"] = "13.1"

desc "Run the unit tests."
lane :tests do
    scan(
        package_path: ".",
        scheme: "UBKit-Package",
        destination: "platform=iOS Simulator,name=iPhone 13 Pro",
        result_bundle: true,
        output_types: "junit,html",
        output_directory: "./build/"
      )
end

