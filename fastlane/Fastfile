default_platform(:ios)

platform :ios do
  desc "Run the unit tests."
  lane :tests do
    scan(
        package_path: ".",
        scheme: "UBKit-Package",
        destination: "platform=iOS Simulator,name=iPhone 16 Pro",
        result_bundle: true,
        output_directory: "./build/",
        output_types: "junit",
        buildlog_path: "test_output/logs"
      )
  end
end